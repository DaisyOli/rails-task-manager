<h1>All tasks: </h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> <br> <%= link_to("Modifier", edit_task_path(task)) %></li>
    <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>
  <br>
  <br>
  <%= link_to("Add a task", new_task_path) %>
  
</ul>


